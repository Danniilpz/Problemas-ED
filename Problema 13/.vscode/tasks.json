{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "g++ build main.cpp",
      "command": "/usr/bin/g++",
      "args": [
        "-g",
        "${workspaceFolder}/main.cpp",
        "-o",
        "${workspaceFolder}/a.out",
        "-lncurses"
      ],
      "options": {
        "cwd": "/usr/bin"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}